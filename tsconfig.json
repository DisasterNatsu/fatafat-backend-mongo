{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "express", "./types/express.d.ts"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "./types/typings.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
